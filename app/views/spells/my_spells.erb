<h1>My Spells</h1>
<% @spells.each do |spell| %>
<h2><%= spell.name %></h2>
<p>Description: <%= spell.description %></p>
<p>Category: <%= spell.category %></p>
<p>Location: <%= spell.location%></p>
<p>Price: <%= spell.price%>$</p>


 <div class="my_spells_img", style="background-image: url(<%= spell.photo.attached? ? cl_image_path(spell.photo.key) : asset_path(@images.sample) %>)">
</div>
<% end %>
